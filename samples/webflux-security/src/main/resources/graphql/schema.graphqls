directive @auth(role : String!) on FIELD_DEFINITION

type Query {
    employees: [Employee]
}
type Mutation {
    # restricted
    updateSalary(input: UpdateSalaryInput!): UpdateSalaryPayload
}
type Employee {
    id: ID!
    name: String
    # restricted
    salary: String  @auth(role : "ADMIN")
}

input UpdateSalaryInput {
    employeeId: ID!
    salary: String!
}
type UpdateSalaryPayload {
    success: Boolean!
    employee: Employee
}
